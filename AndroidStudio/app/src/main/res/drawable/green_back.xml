<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background Layer (Gray) -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="10dp" />
            <solid android:color="#D9D9D9" /> <!-- Gray background color -->
        </shape>
    </item>

    <!-- Progress Layer (Green) -->
    <item>
        <clip android:layout_width="wrap_content">
            <shape android:shape="rectangle">
                <corners android:radius="20dp" />
                <solid android:color="#2F6151" /> <!-- Green progress color -->
            </shape>
        </clip>
    </item>
</layer-list>
