<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_dark"
        android:elevation="0dp"
        android:background="@android:color/transparent" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="172dp"
        android:src="@drawable/mission_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:background="#FFFFFF">

        <TextView
            android:id="@+id/tvLevelPoints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Level 1 â€¢ 250 Points"
            android:textColor="#000000"
            android:textSize="24sp"
            android:fontFamily="@font/inter_bold"
            android:textStyle="bold"/>

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:layout_marginTop="8dp"
            android:progress="40"
            android:max="100"
            android:progressDrawable="@android:drawable/progress_horizontal"/>

        <TextView
            android:id="@+id/tvTaskCollectionTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Task Collection"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/inter_medium"
            android:layout_marginBottom="16dp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/mission"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/shape_lightgrey2"
                    android:padding="16dp"
                    android:layout_marginBottom="16dp"
                    android:gravity="center_vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_coin"
                            android:layout_marginEnd="8dp" />
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/tvTaskHealth"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/inter_medium"
                                android:text="+25 Reach more than 80% health"
                                android:textStyle="bold"
                                android:textColor="#000000"
                                android:textSize="16sp" />
                            <TextView
                                android:id="@+id/tvTaskSubtitle1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/inter_regular"
                                android:text="Click to activate the mission"
                                android:textColor="#666666"
                                android:textSize="14sp" />
                        </LinearLayout>
                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_arrow" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/shape_lightgrey2"
                    android:padding="16dp"
                    android:layout_marginBottom="16dp"
                    android:gravity="center_vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_coin"
                            android:layout_marginEnd="8dp" />
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/tvTaskTitle2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="+25 Buy a plant at shop"
                                android:textStyle="bold"
                                android:fontFamily="@font/inter_medium"
                                android:textColor="#000000"
                                android:textSize="16sp" />
                            <TextView
                                android:id="@+id/tvTaskSubtitle2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Click to activate the mission"
                                android:fontFamily="@font/inter_regular"
                                android:textColor="#666666"
                                android:textSize="14sp" />
                        </LinearLayout>
                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_arrow" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/shape_lightgrey2"
                    android:padding="16dp"
                    android:layout_marginBottom="16dp"
                    android:gravity="center_vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_coin"
                            android:layout_marginEnd="8dp" />
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/tvTaskTitle3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="+25 Add fertilizer"
                                android:textStyle="bold"
                                android:fontFamily="@font/inter_medium"
                                android:textColor="#000000"
                                android:textSize="16sp" />
                            <TextView
                                android:id="@+id/tvTaskSubtitle3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Click to activate the mission"
                                android:fontFamily="@font/inter_regular"
                                android:textColor="#666666"
                                android:textSize="14sp" />
                        </LinearLayout>
                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_arrow" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/shape_lightgrey2"
                    android:padding="16dp"
                    android:layout_marginBottom="16dp"
                    android:gravity="center_vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_coin"
                            android:layout_marginEnd="8dp" />
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/tvTaskTitle4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="+25 Plant a tree"
                                android:textStyle="bold"
                                android:fontFamily="@font/inter_medium"
                                android:textColor="#000000"
                                android:textSize="16sp" />
                            <TextView
                                android:id="@+id/tvTaskSubtitle4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Click to activate the mission"
                                android:fontFamily="@font/inter_regular"
                                android:textColor="#666666"
                                android:textSize="14sp" />
                        </LinearLayout>
                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_arrow" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>
